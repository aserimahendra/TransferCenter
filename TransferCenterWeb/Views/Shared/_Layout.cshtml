<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TransferCenterWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TransferCenterWeb.styles.css" asp-append-version="true" />
</head>
<body class="bg-kpc-gradient-glass">
    <header>
        <nav class="navbar navbar-expand-sm shadow-lg navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 bg-kpc-gradient-glass">
            <div class="container-fluid">

                @* <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">TransferCenterWeb</a> *@
                <a class="navbar-brand d-flex align-items-center" href="#">
                    <img src="~/favicon-nobg.png" alt="KPC" class="img-fluid" style="max-height: 40px;">
                    <span class="ms-2"></span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="transferDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Transfers
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="transferDropdown">
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="GlobalTransfer" asp-action="Create">Create</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="GlobalTransfer" asp-action="Index">Report</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                    <!-- Right side nav - pushes itself to the right -->
                    <ul class="navbar-nav ms-auto align-items-center">
                        <li class="nav-item">
                            <span class="navbar-text me-3">
                            </span>
                        </li>
                        <li class="nav-item">
                            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                <button type="submit" class="btn btn-sm text-white btn-outline-warning" >Logout</button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3flex-grow-1">
            @RenderBody()
        </main>
    </div>

    @inject TransferCenterWeb.Models.BuildInfo buildInfo

    <footer class="d-flex align-items-end py-3 bg-transparent navbar-fixed-bottom">
        <div class="container text-center">
            <span class="text-muted">Build Number: @buildInfo.BuildNumber</span>
            <span class="text-muted ms-3">@buildInfo.Copyright</span>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
