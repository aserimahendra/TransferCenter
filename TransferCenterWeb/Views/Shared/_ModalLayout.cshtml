<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KPC Transfer Center</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TransferCenterWeb.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <!-- Bootstrap Datepicker (jQuery) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-datepicker@1.10.0/dist/css/bootstrap-datepicker3.min.css">
</head>
<body class="bg-light">
    <main class="container-fluid py-3">
        @RenderBody()
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Bootstrap Datepicker (jQuery) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-datepicker@1.10.0/dist/js/bootstrap-datepicker.min.js"></script>
    <script>
        // Minimal global fallback so inline onclick can always call modalActions.downloadFile
        window.modalActions = window.modalActions || {};
        if (typeof window.modalActions.downloadFile !== 'function') {
            window.modalActions.downloadFile = function(url, fileName) {
                try {
                    var root = document.querySelector('[data-modal-list]');
                    var loaderId = root ? root.getAttribute('data-loader-id') : null;
                    var loader = loaderId ? document.getElementById(loaderId) : null;
                    if (loader) loader.classList.remove('d-none');
                    window.location.href = url;
                    setTimeout(function(){ if (loader) loader.classList.add('d-none'); }, 2000);
                } catch (e) {
                    window.location.href = url;
                }
            };
        }
    </script>
    <script type="module" src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
