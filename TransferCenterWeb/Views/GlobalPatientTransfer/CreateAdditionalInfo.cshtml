@model TransferCenterWeb.Models.GlobalPatientTransfer.AdditionalInfo

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row table">
      
        <!-- Bool fields as Yes/No radio buttons -->
        @* Create two-column layout *@
        <div class="row mb-3">
            <!-- ServicesAvailable -->
            <div class="col-md-6">
                <div class="row align-items-center">
                    <div class="col-md-4">
                        <label class="form-label mb-0">@Html.DisplayNameFor(m => m.ServicesAvailable)</label>
                    </div>
                    <div class="col-md-8">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" asp-for="ServicesAvailable" value="true" id="ServicesAvailableYes" />
                            <label class="form-check-label" for="ServicesAvailableYes">Yes</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" asp-for="ServicesAvailable" value="false" id="ServicesAvailableNo" />
                            <label class="form-check-label" for="ServicesAvailableNo">No</label>
                        </div>
                    </div>
                </div>
            </div>

            <!-- SitterRequired -->
            <div class="col-md-6">
                <div class="row align-items-center">
                    <div class="col-md-4">
                        <label class="form-label mb-0">@Html.DisplayNameFor(m => m.SitterRequired)</label>
                    </div>
                    <div class="col-md-8">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" asp-for="SitterRequired" value="true" id="SitterRequiredYes" />
                            <label class="form-check-label" for="SitterRequiredYes">Yes</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" asp-for="SitterRequired" value="false" id="SitterRequiredNo" />
                            <label class="form-check-label" for="SitterRequiredNo">No</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mb-3">
            <!-- VTIBDrips -->
            <div class="col-md-6">
                <div class="row align-items-center">
                    <div class="col-md-4">
                        <label class="form-label mb-0">@Html.DisplayNameFor(m => m.VTIBDrips)</label>
                    </div>
                    <div class="col-md-8">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" asp-for="VTIBDrips" value="true" />
                            <label class="form-check-label">Yes</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" asp-for="VTIBDrips" value="false" />
                            <label class="form-check-label">No</label>
                        </div>
                        <span asp-validation-for="VTIBDrips" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Dialysis -->
            <div class="col-md-6">
                <div class="row align-items-center">
                    <div class="col-md-4">
                        <label class="form-label mb-0">@Html.DisplayNameFor(m => m.Dialysis)</label>
                    </div>
                    <div class="col-md-8">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" asp-for="Dialysis" value="true" />
                            <label class="form-check-label">Yes</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" asp-for="Dialysis" value="false" />
                            <label class="form-check-label">No</label>
                        </div>
                        <span asp-validation-for="Dialysis" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mb-3">
            <!-- PFCTTransfer -->
            <div class="col-md-6">
                <div class="row align-items-center">
                    <div class="col-md-4">
                        <label class="form-label mb-0">@Html.DisplayNameFor(m => m.PFCTTransfer)</label>
                    </div>
                    <div class="col-md-8">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" asp-for="PFCTTransfer" value="true" />
                            <label class="form-check-label">Yes</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" asp-for="PFCTTransfer" value="false" />
                            <label class="form-check-label">No</label>
                        </div>
                        <span asp-validation-for="PFCTTransfer" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- CovidWithin3Days -->
            <div class="col-md-6">
                <div class="row align-items-center">
                    <div class="col-md-4">
                        <label class="form-label mb-0">@Html.DisplayNameFor(m => m.CovidWithin3Days)</label>
                    </div>
                    <div class="col-md-8">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" asp-for="CovidWithin3Days" value="true" />
                            <label class="form-check-label">Yes</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" asp-for="CovidWithin3Days" value="false" />
                            <label class="form-check-label">No</label>
                        </div>
                        <span asp-validation-for="CovidWithin3Days" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>


 

        <!-- Text fields: OtherNotes, CodeStatus -->
        <div class="row">
            <div class="col-md-6">
                <div class="row mb-4">
                    <div class="col-md-3 align-items-center">
                        <label asp-for="OtherNotes" class="form-label mb-0"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="OtherNotes" class="form-control" />
                        <span asp-validation-for="OtherNotes" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="row mb-4">
                    <div class="col-md-3 align-items-center">
                        <label asp-for="CodeStatus" class="form-label mb-0"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="CodeStatus" class="form-control" />
                        <span asp-validation-for="CodeStatus" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Enums (DocumentStatus): each in its own row -->
    @{
        var enumFields = new[]
        {
        nameof(Model.FaceSheet),
        nameof(Model.HAndP),
        nameof(Model.CovidTestResults),
        nameof(Model.TransferOrder),
        nameof(Model.ProgressNotes),
        nameof(Model.ConsultationNotes),
        nameof(Model.MostRecentLabResults),
        nameof(Model.RadiologyResults),
        nameof(Model.MedicationList),
        nameof(Model.TreatmentsAndProceduresInED),
        nameof(Model.InsuranceAuthorization)
        };

        var enumValues = Enum.GetValues(typeof(TransferCenterWeb.Models.DocumentStatus))
        .Cast<TransferCenterWeb.Models.DocumentStatus>();
    }

    @foreach (var field in enumFields)
    {
        <div class="row mb-3">
            <div class="col-md-3">
                <label class="form-label">@field</label>
                
            </div>
            <div class="col-md-9">
                @foreach (var val in enumValues)
                {
                    var id = $"{field}_{val}";
                    <div class="form-check form-check-inline">
                        <input class="form-check-input"
                               type="radio"
                               id="@id"
                               name="@field"
                               value="@val"
                               @(Model.GetType().GetProperty(field)?.GetValue(Model)?.ToString() == val.ToString() ? "checked" : "") />
                        <label class="form-check-label" for="@id">@val</label>
                    </div>
                }
            </div>
        </div>
    }
