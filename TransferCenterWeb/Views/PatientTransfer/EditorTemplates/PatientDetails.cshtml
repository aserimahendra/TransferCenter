@model TransferCenterWeb.Models.PatientTransfer.PatientDetails
@using TransferCenterWeb.Models
@using Microsoft.AspNetCore.Mvc.Rendering

@Html.HiddenFor(m => m.Id)
@Html.HiddenFor(m => m.UId)
@Html.HiddenFor(m => m.IsActive)
@Html.HiddenFor(m => m.CreatedBy)
@Html.HiddenFor(m => m.CreatedOn)

<div class="card mb-4">
    <div class="card-header fw-semibold text-uppercase small">Patient Information</div>
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-md-4">
                <label class="form-label" for="@Html.IdFor(m => m.FirstName)">@Html.DisplayNameFor(m => m.FirstName)</label>
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-4">
                <label class="form-label" for="@Html.IdFor(m => m.LastName)">@Html.DisplayNameFor(m => m.LastName)</label>
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-4">
                <label class="form-label" for="@Html.IdFor(m => m.DOB)">@Html.DisplayNameFor(m => m.DOB)</label>
                @Html.TextBoxFor(
                    m => m.DOB,
                    "{0:MM/dd/yyyy}",
                    new {
                        @class = "form-control date-us",
                        type = "text",
                        placeholder = "MM/DD/YYYY",
                        inputmode = "numeric",
                        maxlength = "10",
                        autocomplete = "bday"
                    })
                @Html.ValidationMessageFor(m => m.DOB, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-3">
                <label class="form-label" for="@Html.IdFor(m => m.Gender)">@Html.DisplayNameFor(m => m.Gender)</label>
                @Html.DropDownListFor(m => m.Gender, new List<SelectListItem>
                {
                    new() { Text = "-- Select Gender --", Value = string.Empty },
                    new() { Text = "Male", Value = "0" },
                    new() { Text = "Female", Value = "1" },
                    new() { Text = "Other", Value = "2" }
                }, new { @class = "form-select" })
                @Html.ValidationMessageFor(m => m.Gender, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-3">
                <label class="form-label" for="@Html.IdFor(m => m.Height)">@Html.DisplayNameFor(m => m.Height)</label>
                @Html.TextBoxFor(m => m.Height, new { @class = "form-control", type = "number", step = "0.01" })
                @Html.ValidationMessageFor(m => m.Height, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-3">
                <label class="form-label" for="@Html.IdFor(m => m.Weight)">@Html.DisplayNameFor(m => m.Weight)</label>
                @Html.TextBoxFor(m => m.Weight, new { @class = "form-control", type = "number", step = "0.01" })
                @Html.ValidationMessageFor(m => m.Weight, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-3">
                <label class="form-label" for="@Html.IdFor(m => m.WeightIn)">@Html.DisplayNameFor(m => m.WeightIn)</label>
                @Html.DropDownListFor(m => m.WeightIn, new List<SelectListItem>
                {
                    new() { Text = "-- Select Unit --", Value = string.Empty },
                    new() { Text = "Lbs", Value = ((short)WeightIn.Lbs).ToString() },
                    new() { Text = "Kgs", Value = ((short)WeightIn.Kgs).ToString() }
                }, new { @class = "form-select" })
                @Html.ValidationMessageFor(m => m.WeightIn, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-3">
                <div class="form-check mt-4">
                    @Html.CheckBoxFor(m => m.Sitter, new { @class = "form-check-input" })
                    <label class="form-check-label" for="@Html.IdFor(m => m.Sitter)">@Html.DisplayNameFor(m => m.Sitter)</label>
                </div>
                @Html.ValidationMessageFor(m => m.Sitter, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-3">
                <div class="form-check mt-4">
                    @Html.CheckBoxFor(m => m.JehovahWitness, new { @class = "form-check-input" })
                    <label class="form-check-label" for="@Html.IdFor(m => m.JehovahWitness)">@Html.DisplayNameFor(m => m.JehovahWitness)</label>
                </div>
                @Html.ValidationMessageFor(m => m.JehovahWitness, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-3">
                <div class="form-check mt-4">
                    @Html.CheckBoxFor(m => m.Capitated, new { @class = "form-check-input" })
                    <label class="form-check-label" for="@Html.IdFor(m => m.Capitated)">@Html.DisplayNameFor(m => m.Capitated)</label>
                </div>
                @Html.ValidationMessageFor(m => m.Capitated, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-3">
                <div class="form-check mt-4">
                    @Html.CheckBoxFor(m => m.IsIsolation, new { @class = "form-check-input" })
                    <label class="form-check-label" for="@Html.IdFor(m => m.IsIsolation)">@Html.DisplayNameFor(m => m.IsIsolation)</label>
                </div>
                @Html.ValidationMessageFor(m => m.IsIsolation, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label class="form-label" for="@Html.IdFor(m => m.IsolationType)">@Html.DisplayNameFor(m => m.IsolationType)</label>
                @Html.TextBoxFor(m => m.IsolationType, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.IsolationType, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-6">
                <label class="form-label" for="@Html.IdFor(m => m.Diagnosis)">@Html.DisplayNameFor(m => m.Diagnosis)</label>
                @Html.TextBoxFor(m => m.Diagnosis, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Diagnosis, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label class="form-label" for="@Html.IdFor(m => m.LevelOfCareNeeded)">@Html.DisplayNameFor(m => m.LevelOfCareNeeded)</label>
                @Html.DropDownListFor(
                    m => m.LevelOfCareNeeded,
                    new List<SelectListItem>
                    {
                        new SelectListItem { Value = "ICU", Text = "ICU" },
                        new SelectListItem { Value = "TELE", Text = "TELE" },
                        new SelectListItem { Value = "SDU", Text = "SDU" },
                        new SelectListItem { Value = "MS", Text = "MS" },
                        new SelectListItem { Value = "IP to Producer Area", Text = "IP to Producer Area" }
                    },
                    "Select Level of Care",
                    new { @class = "form-select" })
                @Html.ValidationMessageFor(m => m.LevelOfCareNeeded, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-6">
                <label class="form-label" for="@Html.IdFor(m => m.CodeStatus)">@Html.DisplayNameFor(m => m.CodeStatus)</label>
                @Html.DropDownListFor(
                    m => m.CodeStatus,
                    new List<SelectListItem>
                    {
                        new SelectListItem { Value = "Full Code", Text = "Full Code" },
                        new SelectListItem { Value = "Full DNR", Text = "Full DNR" },
                        new SelectListItem { Value = "Modified Code/DNR", Text = "Modified Code/DNR" }
                    },
                    "Select Code Status",
                    new { @class = "form-select" })
                @Html.ValidationMessageFor(m => m.CodeStatus, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label class="form-label" for="@Html.IdFor(m => m.GCS)">@Html.DisplayNameFor(m => m.GCS)</label>
                @Html.TextBoxFor(m => m.GCS, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.GCS, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-12">
                <label class="form-label" for="@Html.IdFor(m => m.ReasonForTransfer)">@Html.DisplayNameFor(m => m.ReasonForTransfer)</label>
                @Html.TextAreaFor(m => m.ReasonForTransfer, 4, 0, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.ReasonForTransfer, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
</div>