@model TransferCenterWeb.Models.PatientTransfer.PatientTransferInfo

@Html.HiddenFor(m => m.Id)
@Html.HiddenFor(m => m.UId)
@Html.HiddenFor(m => m.IsActive)
@Html.HiddenFor(m => m.CreatedBy)
@Html.HiddenFor(m => m.CreatedOn)

<div class="card mb-4">
    <div class="card-header fw-semibold text-uppercase small">Transferring Facility Information</div>
    <div class="card-body">
        <div class="row g-3 align-items-end">
            <div class="col-lg-5">
                <label class="form-label fw-semibold" for="@Html.IdFor(m => m.CaseMgrSwRn)">@Html.DisplayNameFor(m => m.CaseMgrSwRn)</label>
                @Html.TextBoxFor(m => m.CaseMgrSwRn, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.CaseMgrSwRn, "", new { @class = "text-danger small" })
            </div>
            <div class="col-lg-4 col-md-6">
                <label class="form-label fw-semibold" for="@Html.IdFor(m => m.TransferDate)">@Html.DisplayNameFor(m => m.TransferDate)</label>
                @Html.TextBoxFor(
                    m => m.TransferDate,
                    "{0:MM/dd/yyyy}",
                    new {
                        @class = "form-control date-us",
                        type = "text",
                        placeholder = "MM/DD/YYYY",
                        inputmode = "numeric",
                        maxlength = "10",
                        autocomplete = "off"
                    })
                @Html.ValidationMessageFor(m => m.TransferDate, "", new { @class = "text-danger small" })
            </div>
            <div class="col-lg-3 col-md-6">
                <label class="form-label fw-semibold" for="@Html.IdFor(m => m.MR)">@Html.DisplayNameFor(m => m.MR)</label>
                @Html.TextBoxFor(m => m.MR, new { @class = "form-control", type = "number" })
                @Html.ValidationMessageFor(m => m.MR, "", new { @class = "text-danger small" })
            </div>
        </div>

