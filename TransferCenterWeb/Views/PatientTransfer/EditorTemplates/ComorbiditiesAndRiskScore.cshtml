                    </tr>
                    <tr>
                        <td>
                            <div class="form-check">
                                @Html.CheckBoxFor(m => m.PulmonaryHTN_Prostacyclin, new { @class = "form-check-input" })
                                @Html.LabelFor(m => m.PulmonaryHTN_Prostacyclin, new { @class = "form-check-label ms-2" })
                            </div>
                        </td>
                        <td class="text-muted small" colspan="3">&nbsp;</td>
                    </tr>
                    <tr class="table-light">
                        <td colspan="3" class="fw-semibold text-end">Total Points</td>
                        <td>
                            @Html.TextBoxFor(m => m.TotalPoints, new { @class = "form-control text-center", type = "number", min = "0" })
                            @Html.ValidationMessageFor(m => m.TotalPoints, "", new { @class = "text-danger small" })
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="alert alert-light border-top rounded-3 p-3 small">
    <div class="fw-semibold text-uppercase">Points Algorithm &mdash; For Office Use Only</div>
    <div>For points that add up to 15 or less, no clinical review required.</div>
    <div>For points of 16 or higher, clinical review by House Supervisor and/or Nurse Navigator required.</div>
</div>
