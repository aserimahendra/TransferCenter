                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div class="form-check">
                                @Html.CheckBoxFor(m => m.DrugOrAlcoholDependence, new { @class = "form-check-input" })
                                @Html.LabelFor(m => m.DrugOrAlcoholDependence, new { @class = "form-check-label ms-2" })
                            </div>
                        </td>
                        <td>
                            <div class="form-check">
                                @Html.CheckBoxFor(m => m.LymphomaLeukemiaCancer, new { @class = "form-check-input" })
                                @Html.LabelFor(m => m.LymphomaLeukemiaCancer, new { @class = "form-check-label ms-2" })
                            </div>
                        </td>
                        <td>
                            <div class="form-check">
                                @Html.CheckBoxFor(m => m.MalnutritionObesityDigestiveDisease, new { @class = "form-check-input" })
