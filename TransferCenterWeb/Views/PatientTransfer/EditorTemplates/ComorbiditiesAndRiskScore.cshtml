                                @Html.CheckBoxFor(m => m.NonCompliantWithCare, new { @class = "form-check-input" })
                                @Html.LabelFor(m => m.NonCompliantWithCare, new { @class = "form-check-label ms-2" })
                            </div>
                        </td>
                        <td>
                            <div class="form-check">
                                @Html.CheckBoxFor(m => m.DiabetesOrSkinIssues, new { @class = "form-check-input" })
