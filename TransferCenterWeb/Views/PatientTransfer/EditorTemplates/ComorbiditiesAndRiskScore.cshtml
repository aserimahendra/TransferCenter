@model TransferCenterWeb.Models.PatientTransfer.ComorbiditiesAndRiskScore

@Html.HiddenFor(m => m.Id)
@Html.HiddenFor(m => m.UId)
@Html.HiddenFor(m => m.IsActive)
@Html.HiddenFor(m => m.CreatedBy)
@Html.HiddenFor(m => m.CreatedOn)

<div class="card mb-4">
    <div class="card-header fw-semibold text-uppercase small">Comorbidities &amp; RF Score</div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-bordered align-middle mb-0">
                <thead class="table-warning">
                    <tr>
                        <th scope="col" colspan="3" class="text-uppercase small fw-semibold">Comorbidities <span class="text-capitalize">(please mark all that apply)</span></th>
                        <th scope="col" class="text-center text-danger fw-semibold">RF Score</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="w-25">
                            <div class="form-check">
                                @Html.CheckBoxFor(m => m.None, new { @class = "form-check-input" })
                                @Html.LabelFor(m => m.None, new { @class = "form-check-label ms-2" })
                            </div>
                        </td>
                        <td class="w-25">
                            <div class="form-check">
                                @Html.CheckBoxFor(m => m.StrokeTIA, new { @class = "form-check-input" })
                                @Html.LabelFor(m => m.StrokeTIA, new { @class = "form-check-label ms-2" })
                            </div>
                        </td>
                        <td class="w-25">
                            <div class="form-check">
                                @Html.CheckBoxFor(m => m.CHF, new { @class = "form-check-input" })
                                @Html.LabelFor(m => m.CHF, new { @class = "form-check-label ms-2" })
                            </div>
                        </td>
                        <td class="w-25">
                            <div class="form-check">
                                @Html.CheckBoxFor(m => m.CKD_ESRD, new { @class = "form-check-input" })
                                @Html.LabelFor(m => m.CKD_ESRD, new { @class = "form-check-label ms-2" })
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div class="form-check">
                                @Html.CheckBoxFor(m => m.LOSMoreThan2Weeks, new { @class = "form-check-input" })
                                @Html.LabelFor(m => m.LOSMoreThan2Weeks, new { @class = "form-check-label ms-2" })
                            </div>
                        </td>
                        <td>
                            <div class="form-check">
                                @Html.CheckBoxFor(m => m.UnconsciousOrALOC, new { @class = "form-check-input" })
                                @Html.LabelFor(m => m.UnconsciousOrALOC, new { @class = "form-check-label ms-2" })
                            </div>
                        </td>
                        <td>
                            <div class="form-check">
                                @Html.CheckBoxFor(m => m.CovidPositive, new { @class = "form-check-input" })
                                @Html.LabelFor(m => m.CovidPositive, new { @class = "form-check-label ms-2" })
                            </div>
                        </td>
                        <td>
                            <div class="form-check">
                                @Html.CheckBoxFor(m => m.ImmunocompromisedOrHIV, new { @class = "form-check-input" })
                                @Html.LabelFor(m => m.ImmunocompromisedOrHIV, new { @class = "form-check-label ms-2" })
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div class="form-check">
                                @Html.CheckBoxFor(m => m.OutOfServiceArea, new { @class = "form-check-input" })
                                @Html.LabelFor(m => m.OutOfServiceArea, new { @class = "form-check-label ms-2" })
                            </div>
                        </td>
                        <td>
                            <div class="form-check">
                                @Html.CheckBoxFor(m => m.DNRCodeStatus, new { @class = "form-check-input" })
                                @Html.LabelFor(m => m.DNRCodeStatus, new { @class = "form-check-label ms-2" })
                            </div>
                        </td>
                        <td>
                            <div class="form-check">
                                @Html.CheckBoxFor(m => m.HTN, new { @class = "form-check-input" })
