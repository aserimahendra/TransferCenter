@model TransferCenterWeb.Models.User

@{
    Layout = "_ModalLayout";
    ViewData["Title"] = "Edit Admin User";
}

<form asp-action="Edit" method="post" class="needs-validation" novalidate>
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.UserId)
    @Html.HiddenFor(m => m.Role)
    @Html.HiddenFor(m => m.CreatedOn)

    <div class="card shadow-sm mb-4 border-0 rounded-4 overflow-hidden">
        <div class="card-body bg-light p-4">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <section class="p-4 border border-3 border-primary-subtle bg-white rounded-3 mb-4 shadow-sm">
                <h5 class="fw-semibold mb-3 text-primary">Account Details</h5>
                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="FirstName" class="form-label"></label>
                        <input asp-for="FirstName" class="form-control" autocomplete="off" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="LastName" class="form-label"></label>
                        <input asp-for="LastName" class="form-control" autocomplete="off" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="EmailId" class="form-label"></label>
                        <input asp-for="EmailId" class="form-control" autocomplete="off" />
                        <span asp-validation-for="EmailId" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="LoginId" class="form-label"></label>
                        <input asp-for="LoginId" class="form-control" autocomplete="off" />
                        <span asp-validation-for="LoginId" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="DomainID" class="form-label"></label>
                        <input asp-for="DomainID" class="form-control" autocomplete="off" />
                        <span asp-validation-for="DomainID" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" class="form-control" type="password" autocomplete="new-password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <div class="form-check">
                            <input asp-for="IsActive" class="form-check-input" />
                            <label asp-for="IsActive" class="form-check-label"></label>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>

    <div class="position-sticky bottom-0 start-0 end-0 bg-white border-top border-3 border-primary shadow-sm py-3 px-3" style="z-index: 10;">
        <div class="d-flex justify-content-end gap-2">
            <button type="button" class="btn btn-outline-secondary px-4 js-modal-cancel" data-modal-dismiss="cancel">Cancel</button>
            <button type="submit" class="btn btn-success px-4">Save Changes</button>
        </div>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
